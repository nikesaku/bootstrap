<h1><%= @user.name %>のページ</h1>

<p>メールアドレス: <%= @user.email %></p>
<p>ユーザーアイコン: <%= image_tag @user.image %></p>
<h2><%= @user.name %>がお気に入り登録したブログ一覧</h2>
<% @favorites_blogs.each do |blog| %>
  <div class="panel panel-default col-md-3">
    <div class="panel-heading">
      <h3 class="panel-title"><%= blog.title%></h3>
    </div>
    <div class="panel-body">
      <p><%= blog.content %></p>
      <p>
          <%= link_to '詳細', blog_path(blog.id), class: "btn btn-default" %>
          <% if blog.user_id == current_user.id %>
            <%= link_to '編集', edit_blog_path(blog.id), class: "btn btn-info" %>
            <%= link_to '削除', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？'}, class: "btn btn-danger" %>
          <% end %>
      </p>
    </div>
  </div>
<% end %>
